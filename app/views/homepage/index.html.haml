- content_for :title do
  Ceclia
- content_for :meta do
  %meta{:content => "Cecilia is a tool for learning Italian.", :name => "description"}/
.search_background
  .main_title 
    %h1 cecilia
  .subtitle il generatore ufficiale dei nomi italiani
  .italianize_name
    = form_for :name, method: :get, url: {:action => :italianize } do |form|
      .select_gender
        Gender:
        = radio_button_tag(:gender, "female")
        = label_tag(:gender_female, "femminile")
        = radio_button_tag(:gender, "male")
        = label_tag(:gender_male, "maschio")
      .enter_name
        = label_tag(:first_name, "First name:")
        = text_field_tag(:first_name)
        = label_tag(:last_name, "Last name:")
        = text_field_tag(:last_name)
      = submit_tag("Dai!")